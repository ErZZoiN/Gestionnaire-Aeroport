<Window x:Class="main.ProfilCompagnieAerienne"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:main"
        mc:Ignorable="d"
        Title="ProfilCompagnieAerienne" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="Fichier">
                <MenuItem Header="Sauvegarder"
                          Name="menuSauvegarder"/>
                <MenuItem Header="Charger"
                          Name="menuCharger"/>
                <MenuItem Header="Deconnexion"
                          Name="menuDeconnexion"/>
            </MenuItem>
            <MenuItem Header="Outils">
                <MenuItem Name="menuAbout"
                          Header="About me"/>
                <MenuItem Header="Option"
                          Name="menuOption"/>
            </MenuItem>
        </Menu>
        <ToolBar>
            <Button Name="toolProgVols"
                    Content="Programmer des vols"/>
            <Button Name="toolLoadVols"
                    Content="Charger vols génériques"/>
        </ToolBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <ToolBar>
                <Label Content="TODO : Barre de recherche"/>
            </ToolBar>
            <DataGrid Name="volGenerique"
                      Grid.Row="1"
                      ItemsSource="{Binding}"/>
            <GridSplitter Grid.Column="1"/>
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Name="genTransProgramme"
                        Content="Programmer"/>
                <Button Name="genAjouter"
                        Content="Ajouter"
                        Click="GenAjouter_Click"/>
                <Button Name="genModifier"
                        Content="Modifier"/>
                <Button Name="genSupprimer"
                        Content="Supprimer"/>
            </StackPanel>
            <ToolBar Grid.Column="2">
                <Label Content="TODO : Barre de recherche"/>
            </ToolBar>
            <DataGrid Name="volProgramme"
                      Grid.Column="2"
                      Grid.Row="1"
                      ItemsSource="{Binding}"/>
            <StackPanel Grid.Row="2"
                        Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Name="progRetarder"
                        Content="Retarder"/>
                <Button Name="progSupprimer"
                        Content="Supprimer"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
